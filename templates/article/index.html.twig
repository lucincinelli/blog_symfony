{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Categorie</th>
                <th>Contenu</th>
                <th>Date</th>
                <th>Etat</th>
                <th>Publication</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td><a href="{{ path('categorie_show', {'id': article.categorie.id}) }}">{{ article.categorie }}</a></td>
                <td>{{ article.contenu }}</td>
                <td>{{ article.Date ? article.Date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.etat ? 'Yes' : 'No' }}</td>
                <td>{{ article.publication ? article.publication|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Create new</a>
{% endblock %}
